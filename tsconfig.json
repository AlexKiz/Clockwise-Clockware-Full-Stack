{
    "compilerOptions": {
        "target": "es2017",
        "module": "commonjs",
        "moduleResolution": "node",
        "rootDir": "src",
        "outDir": "dist",                              
        "lib": [
            "dom",
            "dom.iterable",
            "es6"
        ],                                        
        "typeRoots": [
            "node_modules/@types"
        ],                                      
        "baseUrl": ".",
        "allowSyntheticDefaultImports": true,
        "skipLibCheck": true,
        "allowJs": true,    
        "noImplicitAny": true,            
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,            
        "resolveJsonModule": true,
        "isolatedModules": true,
        "noEmit": false,
        "strict": true,                                 
    }, 
    "include": [
      "src/**/*"
    ]
}