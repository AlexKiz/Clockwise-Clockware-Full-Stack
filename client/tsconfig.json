{
  "compilerOptions": {
    "target": "es5",
    "module": "esnext",
    "moduleResolution": "node",
    "lib": [
      "dom",
      "dom.iterable",
      "es6"
    ],
    "outDir": "build/dist",
    "rootDir": "src",
    "typeRoots": [
      "node_modules/@types"
    ],
    "baseUrl": ".",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "allowJs": true
  },
  "include": [
    "src",
    "src/**/*.ts",
    "src/**/*.tsx"
  ]
}